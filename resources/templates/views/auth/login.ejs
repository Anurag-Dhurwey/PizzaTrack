<section class="login container mx-auto">
    <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md space-y-8">
          <div>
           <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Login to your account</h2>
          </div>
          <form class="mt-8 space-y-6" action="/login" method="POST">
            <div class="rounded-md">
              <div class="mt-4">
                <input id="email-address" name="email" type="email" autocomplete="off"  class="w-full rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500 focus:z-10 " placeholder="Email address">
              </div>
              <div class="mt-4">
                <input id="password" name="password" type="password" autocomplete="off" class="w-full  rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-gray-900 placeholder-gray-500" placeholder="Password">
              </div>
            </div>
      
            <div class="flex items-center justify-around">
                <button type="submit" class="Btn-primary rounded-full  px-4 py-2">
                    Log in
                </button>
              <div class="text-sm">
                <a href="/register" class="font-medium text-indigo-600 hover:text-indigo-500">Don't have an account?</a>
              </div>
            </div>
          </form>
        </div>
      </div>
</section>